# Ambiente da aplicação
APP_ENV=production # opções: development ou production
PORT=8080
APP_BASE_URL=http://localhost:8080

# Dados persistentes
DATA_DIR=/app/data

# Banco de Dados
DB_DRIVER=sqlite # opções: sqlite ou postgres

# PostgreSQL (apenas se DB_DRIVER=postgres)
#DB_HOST=postgres
#DB_PORT=5432
#DB_USER=apime
#DB_PASSWORD=apime
#DB_NAME=apime
#DB_SSLMODE=disable

# Redis (sempre obrigatório para filas de webhook)
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Autenticação JWT
JWT_SECRET=change-me
JWT_EXP_HOURS=24

# Limite por token (rotas privadas)
# Padrão: 300 requisições por 60 segundos por token
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=300
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_REDIS_PREFIX=ratelimit:api

# Limite por IP (rotas públicas)
# Padrão: 100 requisições a cada 900 segundos (15 min)
IP_RATE_LIMIT_ENABLED=true
IP_RATE_LIMIT_REQUESTS=100
IP_RATE_LIMIT_WINDOW_SECONDS=900
IP_RATE_LIMIT_SKIP_PRIVATE_IPS=true

# Log
LOG_LEVEL=info

# Sessões do WhatsApp
WHATSAPP_SESSION_KEY_ENC=change-me

# Webhooks
# Workers concorrentes para processar eventos, padrão: 4
WEBHOOK_WORKERS=4

# Dashboard
DASHBOARD_ENABLED=true
