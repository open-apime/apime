################################################################################
# CONFIGURAÇÃO PADRÃO
# Backend: SQLite + In-Memory Queue/RateLimit
################################################################################

# Ambiente
APP_ENV=production
PORT=8080
APP_BASE_URL=http://localhost:8080
LOG_LEVEL=info

# Dados
DATA_DIR=/app/data
# DB_DRIVER=sqlite (padrão)

# Segurança
JWT_SECRET=change-me
JWT_EXP_HOURS=24
WHATSAPP_SESSION_KEY_ENC=change-me

# Funcionalidades
DASHBOARD_ENABLED=true
WEBHOOK_WORKERS=4

# Rate Limiting (Padrão)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=300
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_PREFIX=ratelimit:api

IP_RATE_LIMIT_ENABLED=true
IP_RATE_LIMIT_REQUESTS=100
IP_RATE_LIMIT_WINDOW_SECONDS=900
IP_RATE_LIMIT_SKIP_PRIVATE_IPS=true


################################################################################
# CONFIGURAÇÃO ESCALÁVEL
# Backend: PostgreSQL + Redis
# Descomente as linhas abaixo para ativar
################################################################################

