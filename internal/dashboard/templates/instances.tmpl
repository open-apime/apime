      <div class="modal-footer">
        <button type="button" class="btn-cancel" id="cancelInstanceModal">Cancelar</button>
        <button type="submit" class="btn-submit" id="instanceModalSubmit">Criar Instância</button>
      </div>
    </form>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Copiar para clipboard
  const copyButtons = document.querySelectorAll('.copy-btn, .token-copy-btn');
  copyButtons.forEach(btn => {
    btn.addEventListener('click', function() {
      const textToCopy = this.getAttribute('data-copy');
      navigator.clipboard.writeText(textToCopy).then(() => {
        const originalHTML = this.innerHTML;
        this.innerHTML = '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>';
        this.style.color = '#22c55e';
        // Mostrar toast de confirmação
        if (typeof window.createToast === 'function') {
          window.createToast('success', 'Copiado para a área de transferência!', 2000);
        }
        setTimeout(() => {
          this.innerHTML = originalHTML;
          this.style.color = '';
        }, 2000);
      }).catch(err => {
        console.error('Erro ao copiar:', err);
        if (typeof window.createToast === 'function') {
          window.createToast('error', 'Erro ao copiar', 2000);
        }
      });
    });
  });

  // Modal
  const modal = document.getElementById('instanceModal');
  const modalTitleText = document.getElementById('instanceModalTitleText');
  const modalForm = document.getElementById('instanceModalForm');
  const modalSubmit = document.getElementById('instanceModalSubmit');
  const openCreate = document.getElementById('openCreateInstance');
  const closeModal = document.getElementById('closeInstanceModal');
  const cancelModal = document.getElementById('cancelInstanceModal');

  function openModal() {
    if (modal) modal.classList.add('active');
  }

  function closeModalFn() {
    if (modal) modal.classList.remove('active');
  }

  function openCreateModal() {
    modalTitleText.textContent = 'Criar Instância';
    modalForm.setAttribute('action', '/dashboard/instances');
    modalSubmit.textContent = 'Criar Instância';
    document.getElementById('modal-instance-name').value = '';
    document.getElementById('modal-webhook-url').value = '';
    document.getElementById('modal-webhook-secret').value = '';
    openModal();
    document.getElementById('modal-instance-name').focus();
  }

  function openEditModal(btn) {
    const id = btn.getAttribute('data-id');
    modalTitleText.textContent = 'Editar Instância';
    modalForm.setAttribute('action', `/dashboard/instances/${id}/update`);
    modalSubmit.textContent = 'Salvar Alterações';
    document.getElementById('modal-instance-name').value = btn.getAttribute('data-name') || '';
    document.getElementById('modal-webhook-url').value = btn.getAttribute('data-webhook-url') || '';
    document.getElementById('modal-webhook-secret').value = btn.getAttribute('data-webhook-secret') || '';
    openModal();
    document.getElementById('modal-instance-name').focus();
  }

  if (openCreate) {
    openCreate.addEventListener('click', openCreateModal);
  }
  if (closeModal) {
    closeModal.addEventListener('click', closeModalFn);
  }
  if (cancelModal) {
    cancelModal.addEventListener('click', closeModalFn);
  }
  if (modal) {
    modal.addEventListener('click', function(e) {
      if (e.target === modal) closeModalFn();
    });
  }

  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') closeModalFn();
  });

  const editButtons = document.querySelectorAll('.edit-instance-btn');
  editButtons.forEach(btn => {
    btn.addEventListener('click', function() {
      openEditModal(this);
    });
  });

  // Handlers para modal de confirmação customizado
  // Gerar token
  const generateTokenForms = document.querySelectorAll('.generate-token-form');
  generateTokenForms.forEach(form => {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      const confirmed = await customConfirm(
        'Gerar um novo token? O token anterior será revogado e se tornará inválido.',
        'Gerar Token de Instância',
        { danger: true, confirmText: 'Gerar Token' }
      );
      if (confirmed) {
        this.submit();
      }
    });
  });

  // Remover instância
  const deleteInstanceForms = document.querySelectorAll('.delete-instance-form');
  deleteInstanceForms.forEach(form => {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      const name = this.getAttribute('data-instance-name') || 'esta instância';
      const confirmed = await customConfirm(
        `Tem certeza que deseja remover a instância "${name}"?`,
        'Remover instância',
        { danger: true, confirmText: 'Remover' }
      );
      if (confirmed) {
        this.submit();
      }
    });
  });

  // Desconectar instância
  const disconnectInstanceForms = document.querySelectorAll('.disconnect-instance-form');
  disconnectInstanceForms.forEach(form => {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      const name = this.getAttribute('data-instance-name') || 'esta instância';
      const confirmed = await customConfirm(
        `Tem certeza que deseja desconectar a instância "${name}"?`,
        'Desconectar Instância',
        { danger: true, confirmText: 'Desconectar' }
      );
      if (confirmed) {
        this.submit();
      }
    });
  });
});
</script>
