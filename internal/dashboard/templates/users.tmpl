<script>
window.copyToClipboard = async function(text, btn) {
  try {
    await navigator.clipboard.writeText(text);
    const originalContent = btn.innerHTML;
    btn.innerHTML = `
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
      Copiado!
    `;
    btn.style.borderColor = '#22c55e';
    btn.style.color = '#22c55e';
    setTimeout(() => {
      btn.innerHTML = originalContent;
      btn.style.borderColor = '';
      btn.style.color = '';
    }, 2000);
  } catch (err) {
    console.error('Falha ao copiar:', err);
  }
};

document.addEventListener('DOMContentLoaded', function() {
  function openModal(modal) {
    if (modal) modal.classList.add('active');
  }
  function closeModal(modal) {
    if (modal) modal.classList.remove('active');
  }

  const createUserModal = document.getElementById('createUserModal');
  const createUserForm = document.getElementById('createUserForm');
  const createUserSubmit = createUserForm ? createUserForm.querySelector('.btn-submit') : null;
  const btnOpenCreateUser = document.getElementById('btnOpenCreateUser');
  const closeCreateUserModal = document.getElementById('closeCreateUserModal');
  const cancelCreateUser = document.getElementById('cancelCreateUser');

  if (btnOpenCreateUser) {
    btnOpenCreateUser.addEventListener('click', () => openModal(createUserModal));
  }
  if (closeCreateUserModal) {
    closeCreateUserModal.addEventListener('click', () => closeModal(createUserModal));
  }
  if (cancelCreateUser) {
    cancelCreateUser.addEventListener('click', () => closeModal(createUserModal));
  }
  if (createUserModal) {
    createUserModal.addEventListener('click', (e) => {
      if (e.target === createUserModal) closeModal(createUserModal);
    });
  }

  const changePasswordModal = document.getElementById('changePasswordModal');
  const changePasswordForm = document.getElementById('changePasswordForm');
  const changePasswordSubmit = changePasswordForm ? changePasswordForm.querySelector('.btn-submit') : null;
  const closePasswordModal = document.getElementById('closePasswordModal');
  const cancelPasswordChange = document.getElementById('cancelPasswordChange');
  const passwordModalSubtitle = document.getElementById('passwordModalSubtitle');
  const passwordButtons = document.querySelectorAll('.btn-change-password');

  passwordButtons.forEach(btn => {
    btn.addEventListener('click', function() {
      const userId = this.getAttribute('data-user-id');
      const email = this.getAttribute('data-user-email') || '';
      if (!userId) return;
      changePasswordForm.action = `/dashboard/users/${userId}/password`;
      passwordModalSubtitle.textContent = email;
      openModal(changePasswordModal);
    });
  });

  if (closePasswordModal) {
    closePasswordModal.addEventListener('click', () => closeModal(changePasswordModal));
  }
  if (cancelPasswordChange) {
    cancelPasswordChange.addEventListener('click', () => closeModal(changePasswordModal));
  }
  if (changePasswordModal) {
    changePasswordModal.addEventListener('click', (e) => {
      if (e.target === changePasswordModal) closeModal(changePasswordModal);
    });
  }

  if (changePasswordForm) {
    changePasswordForm.addEventListener('submit', function(e) {
      const newPass = document.getElementById('new-password').value;
      const confirmPass = document.getElementById('confirm-password').value;
      if (newPass !== confirmPass) {
        e.preventDefault();
        alert('As senhas não coincidem.');
      }
    });
  }

  const tokenModal = document.getElementById('userTokenModal');
  const closeTokenModal = document.getElementById('closeUserTokenModal');
  const tokenButtons = document.querySelectorAll('.user-token-btn');
  const tokenList = document.getElementById('userTokenList');
  const tokenForm = document.getElementById('userTokenCreateForm');
  const tokenSubmit = tokenForm ? tokenForm.querySelector('.btn-submit') : null;
  const userIdInput = document.getElementById('userTokenUserId');
  const tokenSubtitle = document.getElementById('userTokenModalSubtitle');
  const generatedBox = document.getElementById('userTokenGenerated');
  const tokenValueEl = document.getElementById('userTokenValue');
  const copyBtn = document.getElementById('copyUserTokenValue');
  let currentUserId = '';

  function resetTokenModal() {
    tokenList.innerHTML = '<div class="tokens-list-empty">Carregando...</div>';
    generatedBox.style.display = 'none';
    tokenValueEl.textContent = '';
    if (tokenForm) tokenForm.reset();
  }

  async function fetchTokens() {
    if (!currentUserId) return;
    tokenList.innerHTML = '<div class="tokens-list-empty">Carregando...</div>';
    try {
      const resp = await fetch(`/dashboard/users/${currentUserId}/tokens`, { credentials: 'same-origin' });
      if (!resp.ok) throw new Error('falha ao buscar tokens');
      const data = await resp.json();
      renderTokenList(Array.isArray(data.tokens) ? data.tokens : []);
    } catch (err) {
      console.error(err);
      tokenList.innerHTML = '<div class="tokens-list-empty" style="color:#f87171;">Erro ao carregar tokens.</div>';
    }
  }

  function renderTokenList(tokens) {
    if (!tokens.length) {
      tokenList.innerHTML = '<div class="tokens-list-empty">Nenhum token criado.</div>';
      return;
    }
    const rows = tokens.map(token => {
      const created = token.createdAt ? new Date(token.createdAt).toLocaleString('pt-BR') : '—';
      const lastUsed = token.lastUsedAt ? new Date(token.lastUsedAt).toLocaleString('pt-BR') : 'Nunca';
      return `
        <div class="token-row">
          <div class="token-info">
            <span class="token-name">${token.name || '-'}</span>
            <span class="token-meta">Criado: ${created} · Último uso: ${lastUsed}</span>
          </div>
          <button type="button" class="action-btn danger" data-token-id="${token.id}" data-action="delete" data-tooltip="Revogar token">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5">
              <path d="M4 7l16 0" />
              <path d="M10 11l0 6" />
              <path d="M14 11l0 6" />
              <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
              <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
            </svg>
          </button>
        </div>
      `;
    }).join('');
    tokenList.innerHTML = rows;

    tokenList.querySelectorAll('button[data-action="delete"]').forEach(btn => {
      btn.addEventListener('click', async function() {
        const tokenId = this.getAttribute('data-token-id');
        if (!tokenId) return;
        if (!confirm('Revogar este token?')) return;
        try {
          const resp = await fetch(`/dashboard/users/${currentUserId}/tokens/${tokenId}/delete`, {
            method: 'POST',
            credentials: 'same-origin'
          });
          if (!resp.ok) throw new Error('falha ao revogar token');
          fetchTokens();
        } catch (err) {
          console.error(err);
          alert('Erro ao revogar token.');
        }
      });
    });
  }

  tokenButtons.forEach(btn => {
    btn.addEventListener('click', function() {
      currentUserId = this.getAttribute('data-user-id');
      const email = this.getAttribute('data-user-email') || '';
      if (!currentUserId) return;
      userIdInput.value = currentUserId;
      tokenSubtitle.textContent = email;
      resetTokenModal();
      openModal(tokenModal);
      fetchTokens();
    });
  });

  if (closeTokenModal) {
    closeTokenModal.addEventListener('click', () => {
      closeModal(tokenModal);
      resetTokenModal();
    });
  }
  if (tokenModal) {
    tokenModal.addEventListener('click', (e) => {
      if (e.target === tokenModal) {
        closeModal(tokenModal);
        resetTokenModal();
      }
    });
  }

  if (copyBtn) {
    copyBtn.addEventListener('click', async function() {
      const value = tokenValueEl.textContent.trim();
      if (!value) return;
      try {
        await navigator.clipboard.writeText(value);
        copyBtn.textContent = 'Copiado!';
        setTimeout(() => copyBtn.textContent = 'Copiar', 1500);
      } catch (err) {
        console.error(err);
        alert('Não foi possível copiar o token.');
      }
    });
  }

  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeModal(createUserModal);
      closeModal(changePasswordModal);
      closeModal(tokenModal);
      resetTokenModal();
    }
  });


  const deleteUserForms = document.querySelectorAll('.delete-user-form');
  deleteUserForms.forEach(form => {
    form.addEventListener('submit', async function(e) {
      if (this.dataset.submitting === 'true') {
        e.preventDefault();
        return;
      }
      e.preventDefault();
      const email = this.getAttribute('data-user-email') || 'este usuário';
      const confirmed = await customConfirm(
        `Tem certeza que deseja remover ${email}?`,
        'Remover usuário',
        { danger: true, confirmText: 'Remover' }
      );
      if (confirmed) {
        if (typeof setFormSubmittingState === 'function') {
          setFormSubmittingState(this, { loadingText: 'Removendo...' });
        }
        this.submit();
      }
    });
  });

  if (changePasswordForm) {
    if (typeof preventDoubleSubmit === 'function') {
      preventDoubleSubmit(changePasswordForm, { button: changePasswordSubmit, loadingText: 'Alterando...' });
    }
    changePasswordForm.addEventListener('submit', async function(e) {
      const newPass = document.getElementById('new-password').value;
      const confirmPass = document.getElementById('confirm-password').value;
      if (newPass !== confirmPass) {
        e.preventDefault();
        if (typeof clearFormSubmittingState === 'function') {
          clearFormSubmittingState(changePasswordForm);
        }
        await customAlert('As senhas não coincidem.', 'Erro de validação');
      }
    });
  }

  const originalRenderTokenList = renderTokenList;
  renderTokenList = function(tokens) {
    if (!tokens.length) {
      tokenList.innerHTML = '<div class="tokens-list-empty">Nenhum token criado.</div>';
      return;
    }
    const rows = tokens.map(token => {
      const created = token.createdAt ? new Date(token.createdAt).toLocaleString('pt-BR') : '—';
      const lastUsed = token.lastUsedAt ? new Date(token.lastUsedAt).toLocaleString('pt-BR') : 'Nunca';
      return `
        <div class="token-row">
          <div class="token-info">
            <span class="token-name">${token.name || '-'}</span>
            <span class="token-meta">Criado: ${created} · Último uso: ${lastUsed}</span>
          </div>
          <button type="button" class="action-btn danger" data-token-id="${token.id}" data-action="delete" data-tooltip="Revogar token">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5">
              <path d="M4 7l16 0" />
              <path d="M10 11l0 6" />
              <path d="M14 11l0 6" />
              <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
              <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
            </svg>
          </button>
        </div>
      `;
    }).join('');
    tokenList.innerHTML = rows;

    tokenList.querySelectorAll('button[data-action="delete"]').forEach(btn => {
      btn.addEventListener('click', async function() {
        const tokenId = this.getAttribute('data-token-id');
        if (!tokenId) return;
        const confirmed = await customConfirm('Revogar este token?', 'Revogar token', { danger: true, confirmText: 'Revogar' });
        if (!confirmed) return;
        try {
          const resp = await fetch(`/dashboard/users/${currentUserId}/tokens/${tokenId}/delete`, {
            method: 'POST',
            credentials: 'same-origin'
          });
          if (!resp.ok) throw new Error('falha ao revogar token');
          fetchTokens();
        } catch (err) {
          console.error(err);
          await customAlert('Erro ao revogar token.', 'Erro');
        }
      });
    });
  };

  if (tokenForm) {
    if (typeof preventDoubleSubmit === 'function') {
      preventDoubleSubmit(tokenForm, { button: tokenSubmit, loadingText: 'Gerando...' });
    }
    tokenForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      const nameInput = document.getElementById('new-user-token-name');
      if (!nameInput || !currentUserId) return;
      const name = nameInput.value.trim();
      if (!name) return;
      try {
        const body = new URLSearchParams();
        body.append('name', name);
        const resp = await fetch(`/dashboard/users/${currentUserId}/tokens`, {
          method: 'POST',
          body,
          credentials: 'same-origin',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' }
        });
        if (!resp.ok) throw new Error('falha ao gerar token');
        const data = await resp.json();
        if (data.token) {
          tokenValueEl.textContent = data.token;
          generatedBox.style.display = 'block';
        }
        fetchTokens();
        tokenForm.reset();
        if (typeof clearFormSubmittingState === 'function') {
          clearFormSubmittingState(tokenForm);
        }
      } catch (err) {
        console.error(err);
        if (typeof clearFormSubmittingState === 'function') {
          clearFormSubmittingState(tokenForm);
        }
        await customAlert('Erro ao gerar token.', 'Erro');
      }
    });
  }

  if (createUserForm && typeof preventDoubleSubmit === 'function') {
    preventDoubleSubmit(createUserForm, { button: createUserSubmit, loadingText: 'Criando...' });
  }

  if (copyBtn) {
    copyBtn.onclick = null;
    copyBtn.addEventListener('click', async function() {
      const value = tokenValueEl.textContent.trim();
      if (!value) return;
      try {
        await navigator.clipboard.writeText(value);
        copyBtn.textContent = 'Copiado!';
        setTimeout(() => copyBtn.textContent = 'Copiar', 1500);
      } catch (err) {
        console.error(err);
        await customAlert('Não foi possível copiar o token.', 'Erro');
      }
    });
  }
});
</script>
